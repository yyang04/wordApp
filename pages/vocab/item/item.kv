<ListItemWithTwoText>

    RightText:
        text: root.rtext

<Item>
    MDBoxLayout:
        orientation: 'vertical'

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"x": 0, "center_y": .5}
            on_release: root.go_previous()

        RecycleView:
            id: rv
            viewclass: "ListItemWithTwoText"

            RecycleBoxLayout:
                padding: dp(10)
                default_size: None, dp(48)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'